# Função para calcular a média das notas
def calcular_media(n1, n2, n3):
    return (n1 + n2 + n3) / 3

# Função para verificar a situação com base na média
def verificar_situacao(media):
    if media >= 7:
        return "Aprovado"
    elif 5 <= media < 7:
        return "Recuperação"
    else:
        return "Reprovado"

# Função para cadastrar um aluno
def cadastrar_aluno():
    nome = input("Nome do aluno: ")
    n1 = float(input("Nota 1: "))
    n2 = float(input("Nota 2: "))
    n3 = float(input("Nota 3: "))
    
    media = calcular_media(n1, n2, n3)
    situacao = verificar_situacao(media)

    aluno = {
        "nome": nome,
        "media": media,
        "situacao": situacao
    }
    
    return aluno

# Função para mostrar o relatório final
def mostrar_relatorio(lista):
    print("\n--- RELATÓRIO FINAL ---")
    for aluno in lista:
        print(f"Nome: {aluno['nome']}, Média: {aluno['media']:.2f}, Situação: {aluno['situacao']}")

# Programa principal
def main():
    alunos = []
    while True:
        alunos.append(cadastrar_aluno())
        
        continuar = input("Deseja cadastrar outro aluno? (s/n): ").lower()
        if continuar != 's':
            break

    mostrar_relatorio(alunos)

# Executa o programa
main()